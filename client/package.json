{
  "name": "chaotic-kumo-client",
  "version": "1.0.0",
  "description": "Frontend for Chaotic Kumo",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmullercuber/chaotic-kumo.git"
  },
  "keywords": [
    "assistant"
  ],
  "author": "jmullercuber",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jmullercuber/chaotic-kumo/issues"
  },
  "homepage": "https://github.com/jmullercuber/chaotic-kumo#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.4.1",
    "@electron-forge/maker-deb": "^6.4.1",
    "@electron-forge/maker-rpm": "^6.4.1",
    "@electron-forge/maker-squirrel": "^6.4.1",
    "@electron-forge/maker-zip": "^6.4.1",
    "@electron-forge/publisher-github": "^6.4.1",
    "electron": "^26.1.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "chaotic_kumo_client"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "jmullercuber",
              "name": "chaotic-kumo"
            },
            "prerelease": true
          }
        }
      ]
    }
  }
}
